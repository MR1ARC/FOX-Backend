generator client {
  provider        = "prisma-client"
  output          = "../generated/prisma"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"

  
}

model User {
  userId         String          @id @default(uuid())
  emailId        String       @unique
  password       String
  phoneNumber    String       @unique
  posts          Post[]
  comments       Comment[]
  votes          Vote[]
  profile        Profile?
  role           Role         @default(USER)
  memberships    Membership[]
  communityOwned Community[]
}

model Profile {
  profileId String    @id @default(uuid())
  owner     User   @relation(fields: [ownerId], references: [userId])
  ownerId   String    @unique
  firstName String
  lastName  String
  age       Int
  title     String @unique
  karma     Int
  sex       String
}

model Community {
  communityId String          @id @default(uuid())
  owner       User         @relation(fields: [ownerId], references: [userId])
  ownerId     String
  title       String       @unique
  discription String
  rules       String
  createdAt   DateTime     @default(now())
  posts       Post[]
  memberships Membership[]
}

model Post {
  postId      String       @id @default(uuid())
  author      User      @relation(fields: [authorId], references: [userId])
  authorId    String
  community   Community @relation(fields: [communityId], references: [communityId])
  communityId String
  createdAt   DateTime  @default(now())
  title       String
  body        String?
  comments    Comment[]
  votes       Vote[]
}

model Comment {
  commentId String      @id @default(uuid())
  author    User      @relation(fields: [authorId], references: [userId])
  authorId  String
  createdAt DateTime  @default(now())
  body      String
  post      Post      @relation(fields: [postId], references: [postId])
  postId    String
  parent    Comment?  @relation("CommentToComment", fields: [parentId], references: [commentId])
  parentId  String
  childrens Comment[] @relation("CommentToComment")
  votes     Vote[]
}

model Vote {
  voteId    String     @id @default(uuid())
  post      Post?    @relation(fields: [postId], references: [postId])
  postId    String?
  user      User     @relation(fields: [userId], references: [userId])
  userId    String
  comment   Comment? @relation(fields: [commentId], references: [commentId])
  commentId String?
  value     Int      @default(0)
}

model Membership {
  user         User      @relation(fields: [userId], references: [userId])
  userId       String
  membershipId String       @id @default(uuid())
  community    Community @relation(fields: [communityId], references: [communityId])
  communityId  String
  membershipAt DateTime  @default(now())

  @@unique(name: "uniqueMembership", [userId, communityId])
}

enum Role {
  ADMIN
  USER
  MODERATOR
}
